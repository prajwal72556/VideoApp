import socket
import numpy as np
import cv2 as cv
import threading

skt = socket.socket()
skt.bind(("", 1234))
skt.listen()
session, address = skt.accept()
print(session.recv(2046)) 
camera = cv.VideoCapture(0)
def sender():
    while True:
        status, photo = camera.read()
        photo = cv.resize(photo, (640, 480))
        print(photo.shape)
        if status:
            session.send(np.ndarray.tobytes(photo))
        else: print("Could not get frame")

def receiver():
    
    print("Entered")
    while True:
        
        data = session.recv(100000000)
        if(data == b'finished'):
            print("Finished")
            camera.release()
            session.close()
        else:
            photo =  np.frombuffer(data, dtype=np.uint8)
            if len(photo) == 640*480*3:
            
                cv.imshow('From Client', photo.reshape(480, 640, 3))
                
                if cv.waitKey(1) == 13:
                    session.send(b'finished')
                    camera.release()
                    cv.destroyAllWindows()
                    break
           
                
threading.Thread(target=sender).start()
threading.Thread(target=receiver).start()
